<Window x:Class="FileApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Менеджер файлов" 
               HorizontalAlignment="Center" 
               Margin="0,20,0,0" 
               VerticalAlignment="Top" 
               Width="178" 
               Height="35" FontFamily="Times New Roman" 
               FontSize="20"/>

        <TextBox x:Name="FilePath"
            HorizontalAlignment="Left" 
                 Margin="22,94,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120"/>

        <Button Content="Создать текстовый файл" 
                HorizontalAlignment="Left" 
                Height="24" 
                Margin="22,65,0,0" 
                VerticalAlignment="Top" Width="157"
                Click="ChooseFile_Click"/>

        <Button Content="Прочитать файл" 
                HorizontalAlignment="Left" 
                Margin="196,60,0,0" 
                VerticalAlignment="Top" 
                Width="282" Height="43" FontSize="18" 
                Click="Read_Click"/>
        
        <TextBox x:Name="Answer"
            HorizontalAlignment="Left" 
                 Margin="10,331,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="770" 
                 Height="85"/>
        
        <!-- Поле для ввода текста-->
        <TextBox x:Name="input"
            HorizontalAlignment="Left" 
                 Margin="22,139,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="262" Height="78"/>
        
        <Button Content="Записать" 
                HorizontalAlignment="Left" 
                Margin="311,139,0,0" 
                VerticalAlignment="Top" 
                Width="125" 
                Height="25"
                Click="Write_Click"/>
        
        <Button Content="Удалить" 
                HorizontalAlignment="Left" 
                Margin="311,178,0,0" 
                VerticalAlignment="Top" 
                Width="125" 
                Height="26"
                Click="Delete_Click"/>

    </Grid>
</Window>
