<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Grid>

        <Viewbox Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Canvas x:Name="WheellCanvas" Width="200" Height="200" RenderTransformOrigin="0.5, 0.5">
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="WhellRotate"/>
                </Canvas.RenderTransform>

                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="180" Height="180"
                         Stroke="Black" StrokeThickness="6" Fill="#222"/>

                <Ellipse Canvas.Left="40" Canvas.Top="40" Width="120" Height="120"
                         Stroke="#BBB" StrokeThickness="4" Fill="#444"/>

                <Ellipse Canvas.Left="85" Canvas.Top="85" Width="30" Height="30"
                         Stroke="#DDD" StrokeThickness="2" Fill="#CCC"/>

                <Line X1="100" Y1="100" X2="100" Y2="30" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="152" Y2="52" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="170" Y2="100" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="152" Y2="148" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="100" Y2="170" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="48" Y2="148" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="30" Y2="100" Stroke="#EEE" StrokeThickness="4"/>
                <Line X1="100" Y1="100" X2="48" Y2="52" Stroke="#EEE" StrokeThickness="4"/>

            </Canvas>

        </Viewbox>

    </Grid>
</Window>

