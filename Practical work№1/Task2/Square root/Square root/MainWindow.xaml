<Window x:Class="Square_root.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Square_root"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBox x:Name="inputTextBox"
                 HorizontalAlignment="Left" Margin="68,46,0,0"
                 TextWrapping="Wrap" Text="0.0"
                 VerticalAlignment="Top" Width="228"/>


        <Button Content="Вычислить"
                HorizontalAlignment="Left" Margin="409,217,0,0"
                VerticalAlignment="Top" Height="36" Width="125"
                Click="Button_Click"/>


        <Label Content="Введите число:"
               HorizontalAlignment="Left" Margin="68,17,0,0"
               VerticalAlignment="Top" Width="126" FontSize="14"/>


        <Label x:Name="resultLabel"
               Content="Здесь будет результат"
               HorizontalAlignment="Left" Margin="385,46,0,0"
               VerticalAlignment="Top" Width="219"/>

        <Label Content="Вычисление с помощью Math.Sqrt"
               HorizontalAlignment="Left" Margin="385,20,0,0"
               VerticalAlignment="Top" Width="227"
               FontFamily="Arial Black" FontSize="11"/>
        <Label Content="Начальное приближение: " HorizontalAlignment="Left" Margin="68,79,0,0" VerticalAlignment="Top" Width="193" FontFamily="Times New Roman" FontSize="15"/>
        <TextBox 
            x:Name="inputTextBox1"
            HorizontalAlignment="Left" Margin="68,111,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" 
            Width="160" TextChanged="TextBox1_TextChanged"/>
        <Label Content="Вычисление с помощью Ньтона" HorizontalAlignment="Left" Margin="385,80,0,0" VerticalAlignment="Top" Width="219" FontFamily="Arial Black" FontSize="11"/>
        <Label
            x:Name="Newtonres"
            Content="Здесь будет результат"
            HorizontalAlignment="Left"
            Margin="385,108,0,0"
            VerticalAlignment="Top" Width="337"/>
        <Button 
                x:Name="start"
                Content="Начать" 
                HorizontalAlignment="Left" 
                Margin="408,275,0,0" 
                VerticalAlignment="Top" 
                Height="38" Width="126" Click="start_Click"/>
    </Grid>
</Window>
