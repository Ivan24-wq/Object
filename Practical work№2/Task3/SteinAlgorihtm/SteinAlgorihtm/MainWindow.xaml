<Window x:Class="SteinAlgorihtm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteinAlgorihtm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" 
                BorderThickness="1" 
                HorizontalAlignment="Center" 
                Height="57" 
                VerticalAlignment="Top" 
                Width="800"
                Background="Bisque"/>
        <Label Content="Алгоритм Штейна" 
               HorizontalAlignment="Left" 
               Margin="306,10,0,0" 
               VerticalAlignment="Top"
               FontFamily="Times New Roman" 
               Width="314" 
               FontSize="24"
               Foreground="Black"/>
        
        <Label Content="Введите число: " 
               HorizontalAlignment="Left" 
               Height="26" Margin="10,80,0,0" 
               VerticalAlignment="Top" 
               Width="105"/>
        
        <TextBox x:Name="input_num" 
            HorizontalAlignment="Left" 
                 Margin="130,88,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="120"/>
        
        <Button x:Name="num"
            Content="Преобразовать" 
                HorizontalAlignment="Left" 
                Margin="283,87,0,0" 
                VerticalAlignment="Top" 
                Width="99"
                Click="num_Click"/>
        
        <TextBox x:Name="output"
            HorizontalAlignment="Left" 
                 Margin="428,88,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="234"/>
    </Grid>
</Window>
