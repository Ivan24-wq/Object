<Window x:Class="SteinAlgorihtm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteinAlgorihtm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" 
                BorderThickness="1" 
                HorizontalAlignment="Center" 
                Height="57" 
                VerticalAlignment="Top" 
                Width="800"
                Background="Bisque"/>
        <Label Content="Алгоритм Штейна" 
               HorizontalAlignment="Left" 
               Margin="306,10,0,0" 
               VerticalAlignment="Top"
               FontFamily="Times New Roman" 
               Width="314" 
               FontSize="24"
               Foreground="Black"/>
        
        <Label Content="Введите число: " 
               HorizontalAlignment="Left" 
               Height="26" Margin="10,80,0,0" 
               VerticalAlignment="Top" 
               Width="105"/>
        
        <TextBox x:Name="input_num" 
            HorizontalAlignment="Left" 
                 Margin="130,88,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="120"/>
        
        <Button x:Name="num"
            Content="Преобразовать" 
                HorizontalAlignment="Left" 
                Margin="283,87,0,0" 
                VerticalAlignment="Top" 
                Width="99"
                Click="num_Click"/>
        
        <TextBox x:Name="output"
            HorizontalAlignment="Left" 
                 Margin="428,88,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="234"/>
        
        <Label Content="Введите числа: "
               HorizontalAlignment="Left"
               Margin="10,148,0,0" 
               VerticalAlignment="Top" FontSize="14" 
               FontFamily="Times New Roman"/>
        
        <TextBox HorizontalAlignment="Left" 
                 Margin="119,152,0,0" 
                 TextWrapping="Wrap"  
                 VerticalAlignment="Top" 
                 Width="131"/>
        
        <Button 
            Content="Найти НОД" 
                HorizontalAlignment="Left" 
                Margin="283,146,0,0" 
                VerticalAlignment="Top" 
                Width="76"
                Background="Blue"
                Foreground="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <TextBox HorizontalAlignment="Left" 
                 Margin="391,152,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" 
                 Width="338" 
                 RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.126"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
    </Grid>
</Window>
